{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AppPorter",
  "version": "0.1.0",
  "identifier": "com.u3l6.app_porter",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "AppPorter",
        "width": 800,
        "height": 600,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.ico"]
  }
}
